<%layout('layouts/boilerplate')%>
<div id="cluster-map"></div>

<h1 style="margin-left: 2%; font-size: 7xl; font-weight: 900;">
  <span style="background: linear-gradient(to right, #ffa726 0%, #ef4a43 50%, #9572c9 100%),
    background-clip: text,
    color: transparent;
    filter: drop-shadow(0 1px 0 #000);">
    All Expeditions
  </span>
</h1>




<div class="d-flex flex-wrap" style="width: 95vw; margin-left: 2%">
  <% for (let campground of campgrounds){%>
  <div
    class="shadow-lg border-secondary rounded overflow-hidden card mb-5 col-md-5 mx-4"
    style="max-width: 26.5rem"
  >
    <div class="column">
      <div class="col-md-12">
        <% if (campground.images.length) { %>
        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>" />
        <% } %>
      </div>
      <div class="col-md-12">
        <div class="card-body">
          <h5 class="card-title text-gray-700 text-base">
            <%=campground.title%>
          </h5>
          <p class="card-text"><%=campground.description%></p>
          <p class="card-text">
            <small class="text-muted"><%=campground.location%></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%=campground._id %>"
            >View <%=campground.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <%}%>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds ={features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>
